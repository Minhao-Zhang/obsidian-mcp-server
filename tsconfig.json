{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "NodeNext", // Changed from ESNext
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext", // Updated for subpath exports
    "allowSyntheticDefaultImports": true, // Added for path default import
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
